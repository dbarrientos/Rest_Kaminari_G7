<p id="notice"><%= notice %></p>



<%= form_tag(birthdays_path, {method: "GET"}) do %>
  <%= text_field_tag :search, nil, placeholder: "Buscar cumpleaños"%>
  <%= submit_tag "Buscar cumpleaños" %>
<% end -%>

<h1>Birthdays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
        <td><%= birthday.name %></td>
        <td><%= birthday.date_birthday.strftime("%d/%m") if birthday.date_birthday %></td>
        <td><%= link_to 'Show', birthday %></td>
        <td><%= link_to 'Edit', edit_birthday_path(birthday) %></td>
        <td><%= link_to 'Destroy', birthday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @birthdays %>
<br>

<%= link_to 'New Birthday', new_birthday_path %>
